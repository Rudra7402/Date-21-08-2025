class Solution {
    public void inorder(TreeNode root,ArrayList<Integer>ls)
    {
        if(root==null) return;
        inorder(root.left,ls);
        ls.add(root.val);
        inorder(root.right,ls);
    }
    public boolean findTarget(TreeNode root, int k) {
        ArrayList<Integer>ls=new ArrayList<>();
        inorder(root,ls);

        int start=0,end=ls.size()-1;
        while(start<end)
        {
            int sum=ls.get(start)+ls.get(end);
            if(sum==k)
            {
                return true;
            }
            else if(sum<k)
            {
                start++;
            }
            else
            {
                end--;
            }
        }
        return false;
    }
}
